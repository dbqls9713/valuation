{
  "[python]": {
    "editor.defaultFormatter": "eeyore.yapf"
  },
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/__pycache__": true
  },
  "files.insertFinalNewline": true,
  "yapf.args": ["--style", ".style.yapf"],
  "pylint.args": ["--rcfile", ".pylintrc"],
  "isort.args": ["--settings-file", ".isort.cfg"],
}
